<html>
	<head>
		<meta charset="utf-8"/>
		<title>Slim 3</title>
		<link href='//fonts.googleapis.com/css?family=Lato:300' rel='stylesheet' type='text/css'>
		<link href='{{ base_url() }}/css/style.css' rel='stylesheet' type='text/css'>
	</head>
	<body>
		{%if token %}
			<div style="text-align:right">{{ token.lastname }} {{ token.firstname }}  <a href="/member/logout">Logout</a></div>
		{% endif %}
		<h1>Slim</h1>
		<div>a microframework for PHP</div>

		{% if flash %}
			<div style="margin:30px auto;">
				{% for f in flash %}
					<p>{{ f }}</p>
				{% endfor %}
			</div>
		{% endif %}

		<div style="margin-top: 30px">
			{% if post %}
				<h2>{{ post.title }}</h2>
				<hr>
				<p>{{ post.content }}</p>
			{% endif %}
		</div>
	</body>
</html>
